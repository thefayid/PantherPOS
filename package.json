{
  "name": "panther-pos",
  "private": true,
  "version": "1.0.0",
  "description": "PantherPOS - Premium Windows POS Solution",
  "author": "User",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm.cmd run dev:vite\" \"npm.cmd run dev:electron\"",
    "dev:vite": "set VITE_DEV_SERVER_URL=http://127.0.0.1:5173&& vite",
    "dev:electron": "wait-on tcp:127.0.0.1:5173 && set ELECTRON_RUN_AS_NODE=&& set VITE_DEV_SERVER_URL=http://127.0.0.1:5173&& electron .",
    "build": "tsc -b && vite build && tsc -p electron/tsconfig.json && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@capacitor-mlkit/barcode-scanning": "^8.0.0",
    "@capacitor/android": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/ios": "^8.0.1",
    "@fastify/cors": "^8.5.0",
    "@types/qrcode.react": "^1.0.5",
    "axios": "^1.13.4",
    "clsx": "^2.1.0",
    "electron-updater": "^6.7.3",
    "fastify": "^4.29.1",
    "fuse.js": "^7.1.0",
    "jsbarcode": "^3.12.3",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.562.0",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.22.0",
    "react-to-print": "^3.2.0",
    "serialport": "^13.0.0",
    "sql.js": "^1.13.0",
    "vosk-browser": "^0.0.8",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.1",
    "@electron/rebuild": "^4.0.2",
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsbarcode": "^3.11.4",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/sql.js/dist/sql-wasm.wasm",
        "to": "sql-wasm.wasm"
      }
    ],
    "win": {
      "target": "nsis",
      "publish": [
        {
          "provider": "github",
          "owner": "thefayid",
          "repo": "PantherPOS"
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    }
  }
}